<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/celdaplaylistImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            tools:src="@drawable/rockeando" />

        <TextView
            android:id="@+id/celdaplaylistCanciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/celdaplaylistImagen"
            android:layout_margin="10dp"
            android:background="@drawable/round_borders_celda_playlist"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            tools:text="90 canciones" />
    </RelativeLayout>

    <TextView
        android:id="@+id/celdaplaylistNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorWhite"
        tools:text="Exitos Argentina" />
</LinearLayout>