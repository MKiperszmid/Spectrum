<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/celdaCompletoID"
    android:layout_marginStart="15dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/lavelapuercalanube"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/maxSizeImage"
        android:maxHeight="@dimen/maxSizeImage"
        android:id="@+id/celdaPortadaID"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="@dimen/maxSizeImage"
        android:layout_height="wrap_content"
        tools:text="Cancion"
        android:textStyle="bold"
        android:textSize="@dimen/maxSizeSongName"
        android:gravity="center"
        android:id="@+id/celdaCancionID"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="@dimen/maxSizeImage"
        android:layout_height="wrap_content"
        tools:text="Artista"
        android:textSize="@dimen/maxSizeArtistName"
        android:gravity="center"
        android:textColor="@color/colorGray"
        android:id="@+id/celdaArtistaID"/>

</LinearLayout>