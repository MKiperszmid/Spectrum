<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/celdaCompletoID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/celdaPortadaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/maxSizeImage"
        android:maxWidth="@dimen/maxSizeImage" />

    <TextView
        android:id="@+id/celdaCancionID"
        android:layout_width="@dimen/maxSizeImage"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:maxLength="25"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/maxSizeSongName"
        android:textStyle="bold"
        tools:text="Cancion" />

    <TextView
        android:id="@+id/celdaArtistaID"
        android:layout_width="@dimen/maxSizeImage"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/maxSizeArtistName"
        tools:text="Artista" />

</LinearLayout>