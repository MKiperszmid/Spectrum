<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/playlisttest"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:id="@+id/cac_iv_artwork"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="One More Time"
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/cac_iv_artwork"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/cac_tv_songName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="One More Time"
        android:textColor="@color/colorGray"
        android:layout_alignLeft="@id/cac_tv_songName"
        android:id="@+id/cac_tv_artistName"
        android:layout_toEndOf="@id/cac_iv_artwork"
        android:layout_below="@id/cac_tv_songName"/>


</RelativeLayout>