<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Fragments.PlaybarbottomFragment">

    <RelativeLayout
        android:id="@+id/relativeQueue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/upBtn"
            android:layout_width="25dp"
            android:layout_height="@dimen/maxSizeUpPlayingIcon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/flecha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/playBtn"
            android:layout_toRightOf="@id/upBtn"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/cancionCurrentPlayingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Artista raro"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/maxSizeSongName"
                android:textStyle="bold"
                tools:text="Cancion" />

            <TextView
                android:id="@+id/separatorCurrentPlayingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/maxSizeSongName"
                android:textStyle="bold"
                tools:text=" - " />

            <TextView
                android:id="@+id/artistCurrentPlayingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorGrayWhite"
                android:textSize="@dimen/maxSizeSongName"
                tools:text="Artista" />
        </LinearLayout>

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/maxSizeCurrentPlayingPlay"
            android:maxWidth="@dimen/maxSizeCurrentPlayingPlay"
            android:src="@drawable/play" />
    </RelativeLayout>


</LinearLayout>